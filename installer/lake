# :command.version_command
version_command() {
  echo "$version"
}

# :command.usage
lake_usage() {
  if [[ -n $long_usage ]]; then
    printf "lake - Laravel tooling for Linix\n"
    echo

  else
    printf "lake - Laravel tooling for Linix\n"
    echo

  fi

  printf "Usage:\n"
  printf "  lake COMMAND\n"
  printf "  lake [COMMAND] --help | -h\n"
  printf "  lake --version | -v\n"
  echo
  # :command.usage_commands
  printf "Commands:\n"
  echo "  init   Initialise Lake"
  echo

  # :command.long_usage
  if [[ -n $long_usage ]]; then
    printf "Options:\n"

    # :command.usage_fixed_flags
    echo "  --help, -h"
    printf "    Show this help\n"
    echo
    echo "  --version, -v"
    printf "    Show version number\n"
    echo

  fi
}

# :command.usage
lake_init_usage() {
  if [[ -n $long_usage ]]; then
    printf "lake init - Initialise Lake\n"
    echo

  else
    printf "lake init - Initialise Lake\n"
    echo

  fi

  printf "Usage:\n"
  printf "  lake init [OPTIONS]\n"
  printf "  lake init --help | -h\n"
  echo

  # :command.long_usage
  if [[ -n $long_usage ]]; then
    printf "Options:\n"

    # :command.usage_fixed_flags
    echo "  --help, -h"
    printf "    Show this help\n"
    echo

    # :command.usage_flags
    # :flag.usage
    echo "  --force, -f"
    printf "    Overwrite existing installation\n"
    echo

    # :command.usage_examples
    printf "Examples:\n"
    printf "  lake init\n"
    printf "  lake init [-f|--force]\n"
    echo

  fi
}

# :command.normalize_input
normalize_input() {
  local arg flags

  while [[ $# -gt 0 ]]; do
    arg="$1"
    if [[ $arg =~ ^(--[a-zA-Z0-9_\-]+)=(.+)$ ]]; then
      input+=("${BASH_REMATCH[1]}")
      input+=("${BASH_REMATCH[2]}")
    elif [[ $arg =~ ^(-[a-zA-Z0-9])=(.+)$ ]]; then
      input+=("${BASH_REMATCH[1]}")
      input+=("${BASH_REMATCH[2]}")
    elif [[ $arg =~ ^-([a-zA-Z0-9][a-zA-Z0-9]+)$ ]]; then
      flags="${BASH_REMATCH[1]}"
      for (( i=0 ; i < ${#flags} ; i++ )); do
        input+=("-${flags:i:1}")
      done
    else
      input+=("$arg")
    fi

    shift
  done
}
# :command.inspect_args
inspect_args() {
  readarray -t sorted_keys < <(printf '%s\n' "${!args[@]}" | sort)
  if (( ${#args[@]} )); then
    echo args:
    for k in "${sorted_keys[@]}"; do echo "- \${args[$k]} = ${args[$k]}"; done
  else
    echo args: none
  fi

  if (( ${#other_args[@]} )); then
    echo
    echo other_args:
    echo "- \${other_args[*]} = ${other_args[*]}"
    for i in "${!other_args[@]}"; do
      echo "- \${other_args[$i]} = ${other_args[$i]}"
    done
  fi
}

